{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc build program",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                
                //allow debugging:
                "-g",
                
                //standard:
                "-std=c99",
                
                //enforce standard (no compiler specific features allowed):
                "-pedantic",

                //treat warnings as errors:
                //"-Werror",
                
                //warning flags:
                "-Wall",
                "-Wextra",

                //workaround printf fix for older gcc compilers on Windows:
                //"-D __USE_MINGW_ANSI_STDIO",

                "*.c",
                "-o",
                "${workspaceFolder}/program",
                
                //link math lib:
                "-lm",

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
